.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 50%, #ffb6c1 100%);
  padding-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}
.nav-bar {
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.nav-bar .nav-back {
  position: absolute;
  left: 30rpx;
}
.nav-bar .nav-back .back-icon {
  font-size: 40rpx;
  color: #333;
}
.nav-bar .nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.avatar-section {
  padding: 40rpx;
  display: flex;
  justify-content: center;
}
.avatar-section .avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #fff;
}
.avatar-section .avatar-wrapper .avatar {
  width: 100%;
  height: 100%;
}
.avatar-section .avatar-wrapper .avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-backdrop-filter: blur(5px);
          backdrop-filter: blur(5px);
}
.avatar-section .avatar-wrapper .avatar-edit .edit-text {
  color: #ffffff;
  font-size: 24rpx;
}
.form-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.form-section .form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.form-section .form-item:last-child {
  border-bottom: none;
}
.form-section .form-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}
.form-section .form-item .input {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 20rpx;
}
.form-section .form-item .picker {
  height: 80rpx;
}
.form-section .form-item .picker .picker-value {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 20rpx;
}
.form-section .form-item .textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
}
.save-button {
  margin: 40rpx 20rpx;
  height: 88rpx;
  background: linear-gradient(45deg, #ff4081, #ff80ab);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 64, 129, 0.3);
}
.save-button .save-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}
.decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.decoration .circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  animation: float 6s ease-in-out infinite;
}
.decoration .circle.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -50rpx;
  right: -50rpx;
  animation-delay: 0s;
}
.decoration .circle.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -30rpx;
  left: -30rpx;
  animation-delay: 2s;
}
.decoration .circle.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 40%;
  right: 15%;
  animation-delay: 4s;
}
@keyframes float {
0%, 100% {
    transform: translateY(0);
}
50% {
    transform: translateY(-20rpx);
}
}