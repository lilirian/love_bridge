.coach-container {
  min-height: 100vh;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
}
.nav-bar {
  height: 88rpx;
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  padding-top: var(--status-bar-height);
}
.nav-bar .back {
  color: #ffffff;
  font-size: 28rpx;
}
.nav-bar .title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}
.content {
  flex: 1;
  padding: 30rpx;
}
.upload-section {
  background-color: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.upload-section .upload-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.upload-section .upload-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.upload-section .upload-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.upload-section .upload-btn {
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  color: #ffffff;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.analysis-section .chat-preview {
  background-color: #ffffff;
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.analysis-section .chat-preview .preview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}
.analysis-section .chat-preview .chat-content {
  height: 400rpx;
}
.analysis-section .chat-preview .chat-content .chat-item {
  margin-bottom: 20rpx;
}
.analysis-section .chat-preview .chat-content .chat-item .chat-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}
.analysis-section .chat-preview .chat-content .chat-item .chat-bubble {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.analysis-section .chat-preview .chat-content .chat-item .chat-bubble.self {
  background-color: #FFB6C1;
  color: #ffffff;
  margin-left: auto;
}
.analysis-section .chat-preview .chat-content .chat-item .chat-bubble.other {
  background-color: #f5f5f5;
  color: #333;
}
.analysis-section .analysis-result .result-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}
.analysis-section .analysis-result .result-card {
  background-color: #ffffff;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.analysis-section .analysis-result .result-card .result-item {
  margin-bottom: 30rpx;
}
.analysis-section .analysis-result .result-card .result-item:last-child {
  margin-bottom: 0;
}
.analysis-section .analysis-result .result-card .result-item .item-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.analysis-section .analysis-result .result-card .result-item .item-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}
.footer {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.footer .action-btn {
  flex: 1;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.footer .action-btn.primary {
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  color: #ffffff;
}