.chat-detail-container {
  min-height: 100vh;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
}
.chat-detail-container .nav-bar {
  height: 88rpx;
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  padding-top: var(--status-bar-height);
}
.chat-detail-container .nav-bar .back {
  color: #ffffff;
  font-size: 28rpx;
}
.chat-detail-container .nav-bar .title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}
.chat-detail-container .chat-content {
  flex: 1;
  padding: 20rpx;
}
.chat-detail-container .chat-content .message-list .message-item {
  display: flex;
  margin-bottom: 30rpx;
}
.chat-detail-container .chat-content .message-list .message-item.self {
  flex-direction: row-reverse;
}
.chat-detail-container .chat-content .message-list .message-item.self .message-content {
  margin-right: 20rpx;
  margin-left: 0;
}
.chat-detail-container .chat-content .message-list .message-item.self .message-content .message-text {
  background-color: #FFB6C1;
  color: #ffffff;
}
.chat-detail-container .chat-content .message-list .message-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.chat-detail-container .chat-content .message-list .message-item .message-content {
  margin-left: 20rpx;
  max-width: 60%;
}
.chat-detail-container .chat-content .message-list .message-item .message-content .message-text {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  display: inline-block;
  word-break: break-all;
}
.chat-detail-container .chat-content .message-list .message-item .message-content .message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.chat-detail-container .input-area {
  padding: 20rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
}
.chat-detail-container .input-area .message-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.chat-detail-container .input-area .send-btn {
  width: 120rpx;
  height: 72rpx;
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  color: #ffffff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}