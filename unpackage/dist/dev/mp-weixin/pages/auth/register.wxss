.register-container {
  padding: 40rpx;
}
.register-container .register-header {
  margin-bottom: 60rpx;
}
.register-container .register-header .title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.register-container .register-header .subtitle {
  font-size: 28rpx;
  color: #666;
}
.register-container .register-form .input-group {
  margin-bottom: 30rpx;
}
.register-container .register-form .input-group .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.register-container .register-form .input-group .input {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.register-container .register-form .input-group .picker {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 44rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.register-container .register-form .input-group .picker .picker-value {
  font-size: 28rpx;
  color: #333;
}
.register-container .register-form .input-group .textarea {
  width: 100%;
  height: 200rpx;
  background: #F5F5F5;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
}
.register-container .register-form .register-btn {
  width: 100%;
  height: 88rpx;
  background: #ff4081;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}
.register-container .register-form .register-btn:disabled {
  opacity: 0.6;
}
.register-container .register-form .login-link {
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}
.register-container .register-form .login-link .link {
  color: #ff4081;
  margin-left: 10rpx;
}