.my-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 50%, #ffb6c1 100%);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}
.my-container .user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.my-container .user-card .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 0;
}
.my-container .user-card .user-info .avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}
.my-container .user-card .user-info .avatar-wrapper .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}
.my-container .user-card .user-info .avatar-wrapper .online-status {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: #ccc;
  border: 2rpx solid #fff;
}
.my-container .user-card .user-info .avatar-wrapper .online-status.online {
  background: #4CAF50;
}
.my-container .user-card .user-info .avatar-wrapper .edit-avatar {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 64, 129, 0.9);
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}
.my-container .user-card .user-info .avatar-wrapper .edit-avatar .icon {
  font-size: 20rpx;
  color: #fff;
}
.my-container .user-card .user-info .info {
  flex: 1;
}
.my-container .user-card .user-info .info .username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.my-container .user-card .user-info .info .email {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}
.my-container .user-card .user-info .info .vip-badge {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(45deg, #FFD700, #FFA500);
  padding: 2rpx 12rpx;
  border-radius: 16rpx;
}
.my-container .user-card .user-info .info .vip-badge .icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}
.my-container .user-card .user-info .info .vip-badge text {
  font-size: 20rpx;
  color: #fff;
}
.my-container .menu-list .menu-section {
  margin-bottom: 24rpx;
}
.my-container .menu-list .menu-section .section-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  display: block;
}
.my-container .menu-list .menu-section .menu-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.my-container .menu-list .menu-section .menu-item .icon-wrapper {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 64, 129, 0.1);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.my-container .menu-list .menu-section .menu-item .icon-wrapper .icon {
  font-size: 36rpx;
}
.my-container .menu-list .menu-section .menu-item .text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.my-container .menu-list .menu-section .menu-item .arrow {
  font-size: 30rpx;
  color: #999;
}
.my-container .decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.my-container .decoration .circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  animation: float 6s ease-in-out infinite;
}
.my-container .decoration .circle.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -50rpx;
  right: -50rpx;
  animation-delay: 0s;
}
.my-container .decoration .circle.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -30rpx;
  left: -30rpx;
  animation-delay: 2s;
}
.my-container .decoration .circle.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 40%;
  right: 15%;
  animation-delay: 4s;
}
@keyframes float {
0%, 100% {
    transform: translateY(0);
}
50% {
    transform: translateY(-20rpx);
}
}