.private-chat-container {
  min-height: 100vh;
  background-color: #fafafa;
}
.private-chat-container .nav-bar {
  height: 88rpx;
  background: linear-gradient(45deg, #FFB6C1, #FF69B4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: var(--status-bar-height);
}
.private-chat-container .nav-bar .title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}
.private-chat-container .chat-list {
  height: calc(100vh - 88rpx - var(--status-bar-height));
  padding: 20rpx;
}
.private-chat-container .chat-list .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.private-chat-container .chat-list .empty-state .empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}
.private-chat-container .chat-list .empty-state .empty-text {
  color: #999;
  font-size: 28rpx;
}
.private-chat-container .chat-list .chat-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.private-chat-container .chat-list .chat-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.private-chat-container .chat-list .chat-item .chat-info {
  flex: 1;
}
.private-chat-container .chat-list .chat-item .chat-info .username {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.private-chat-container .chat-list .chat-item .chat-info .last-message {
  font-size: 26rpx;
  color: #999;
}
.private-chat-container .chat-list .chat-item .time {
  font-size: 24rpx;
  color: #999;
}